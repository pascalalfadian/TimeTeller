<?xml version="1.0" encoding="utf-8"?>

<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.0">
  <CommandSet xml:lang="en-US">
    <CommandPrefix>Hey</CommandPrefix>
    <Example>what time is it?</Example>

    <Command Name="Now">
      <Example>what time is it?</Example>
      <ListenFor>what time [is it]?</ListenFor>
      <ListenFor>now</ListenFor>
      <Feedback>Now is...</Feedback>
      <Navigate />
    </Command>
    <Command Name="Today">
      <Example>what day is today?</Example>
      <ListenFor>[what day is] today?</ListenFor>
      <Feedback>Today is...</Feedback>
      <Navigate />
    </Command>
  </CommandSet>
</VoiceCommands>